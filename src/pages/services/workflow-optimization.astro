---
import Layout from '../../layouts/Layout.astro';

const features = [
  {
    title: "Process Analysis",
    description: "In-depth analysis of your current workflows to identify bottlenecks and opportunities.",
    icon: "üîç"
  },
  {
    title: "Workflow Design",
    description: "Custom workflow solutions designed for maximum efficiency and scalability.",
    icon: "‚úèÔ∏è"
  },
  {
    title: "Team Training",
    description: "Comprehensive training to ensure your team can effectively use new workflows.",
    icon: "üë•"
  },
  {
    title: "Performance Tracking",
    description: "Ongoing monitoring and optimization of workflow performance.",
    icon: "üìä"
  }
];

const benefits = [
  "Reduce process completion time by 50%",
  "Eliminate redundant steps and bottlenecks",
  "Improve team collaboration and clarity",
  "Standardize processes for consistency",
  "Better resource allocation",
  "Measurable performance improvements"
];

const process = [
  {
    step: 1,
    title: "Workflow Audit",
    description: "We map and analyze your current workflows and pain points."
  },
  {
    step: 2,
    title: "Optimization Plan",
    description: "Develop a detailed plan for streamlining your processes."
  },
  {
    step: 3,
    title: "Implementation",
    description: "Roll out optimized workflows with minimal disruption."
  },
  {
    step: 4,
