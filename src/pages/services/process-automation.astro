    icon: "üìù"
  },
  {
    title: "Document Processing",
    description: "Automate document creation, processing, and management workflows.",
    icon: "üìÑ"
  },
  {
    title: "Email & Communication",
    description: "Automated email responses, notifications, and communication workflows.",
    icon: "üìß"
  }
];

const benefits = [
  "Save 10+ hours per week on manual tasks",
  "Reduce errors by up to 90%",
  "Improve team productivity and satisfaction",
  "Scale operations without adding overhead",
  "Real-time data accuracy and updates",
  "Better customer experience through faster response times"
];

const process = [
  {
    step: 1,
    title: "Discovery",
    description: "We analyze your current processes and identify automation opportunities."
  },
  {
    step: 2,
    title: "Solution Design",
    description: "Custom automation solution designed to meet your specific needs."
  },
  {
    step: 3,
